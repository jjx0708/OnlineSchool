<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.miaozt.onlineschool.mapper.AdminMapper" >
    <resultMap id="BaseResultMap" type="cn.miaozt.onlineschool.model.Admin" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
          id ,username, password
    </sql>

    <select id="getAllAdmin" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM admin_info
    </select>

    <select id="getByAdminId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM admin_info
        WHERE id=#{id}
    </select>

    <select id="getByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM admin_info
        WHERE username=#{username}
    </select>

    <update id="updatePasswordByAdminName" parameterType="cn.miaozt.onlineschool.model.Admin">
        UPDATE admin_info
        SET password=#{password}
        WHERE username=#{username}
    </update>

    <update id="updatePasswordByAdminId" parameterType="cn.miaozt.onlineschool.model.Admin">
        UPDATE admin_info
        SET password=#{password}
        WHERE id=#{id}
    </update>

    <insert id="insertAdmin" parameterType="cn.miaozt.onlineschool.model.Admin">
        INSERT
        INTO admin_info(username,password)
        VALUES(#{username},#{password})
    </insert>

    <delete id="deleteByAdminName" parameterType="java.lang.String">
        DELETE
        FROM admin_info
        WHERE username=#{username}
    </delete>

    <delete id="deleteByAdminId" parameterType="java.lang.Long">
        DELETE
        FROM admin_info
        WHERE id=#{id}
    </delete>
</mapper>